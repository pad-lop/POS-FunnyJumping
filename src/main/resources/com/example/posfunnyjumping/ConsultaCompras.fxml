                defaultButton="true" text="Compras"/>
        <Button mnemonicParsing="false" onAction="#onConsultaInventariosButtonClick" prefHeight="30.0"
                text="Inventarios"/>
        <Button mnemonicParsing="false" onAction="#onConsultaCortesButtonClick" prefHeight="30.0"
